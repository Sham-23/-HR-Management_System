@model EmployeeManagementSystemCore.Models.Designation

@{
    ViewBag.Title = "AddDesignation";
}
@if (Convert.ToInt16((Session["role"]).ToString()) == 1 && ViewBag.AddDesignation == null)
{
    <h4 class="LeaveSummaryHeading">Add Designation</h4>
    <hr id="leaverequesthr"/>
    using (Html.BeginForm("SaveDesignation", "Admin",Model))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" id="Add-Desi">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group my-5">
                @*@Html.LabelFor(model => model.DesignationName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <label class="control-label col-md-4">Designation Name</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.DesignationName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.DesignationName, "", new { @class = "text-danger" })
                </div>
            </div>

             <div class="form-group">

                <div class="col-md-offset-2 col-md-2" id="LeaveBtn">
                     <input type="submit" id="createsubmit" value="Create" class="btn btn-default btn-primary" />

                 </div>
                 <div class="col-md-1 " style="width: 11.55%" id="add-Desi-back-list">
                     @Html.ActionLink("Back", "GetAllDesignation")
                </div>
            </div>


        </div>
    }

   
}
else if (ViewBag.AddDesignation == null)
{
    <div>
        <p>
            @ViewBag.AddDesignation
        </p>
    </div>
}
else
{
    <td> You are not Authorized </td>
}

