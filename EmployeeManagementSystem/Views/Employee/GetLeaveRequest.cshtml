@model EmployeeManagementSystemCore.ViewModels.LeaveRequestViewModel

@{
    ViewBag.Title = "GetLeaveRequest";
   // var data = (IEnumerable<EmployeeManagementSystemCore.Models.LeaveRequest>)ViewData["getleaverequest"];

}



    <h2 class="addEmp">Past Leaves</h2>
    <hr id="addemphr" />
    <div id="GetAllEmpDetails">
        <table class="EmpTableDet">
            <thead>
                <tr>
                    <th>
                        Leave Type
                    </th>

                    <th>
                        Start Date
                    </th>
                    <th>
                        End Date
                    </th>




                    <th>
                        Length
                    </th>



                    <th>
                        Reason
                    </th>

                    <th>
                        Status
                    </th>



                </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.leaveRequests)
                {

                        <tr>
                            <td> @item.LeaveType</td>
                            <td> @item.StartDate.ToString("dd/MM/yyyy")</td>
                            <td> @item.EndDate.ToString("dd/MM/yyyy")</td>
                            @if(item.LengthOfLeave == 0)
                            {
                               <td> 0.5</td>
                            }
                            else
                            {
<td> @item.LengthOfLeave</td>
                }
                            
                            <td> @item.Reason</td>
                            <td> @item.Status</td>





                        </tr>

                }
            }
        </tbody>
    </table>

</div>

